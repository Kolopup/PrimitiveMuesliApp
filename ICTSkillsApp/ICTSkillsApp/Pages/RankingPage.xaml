<Page x:Class="ICTSkillsApp.Pages.RankingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ICTSkillsApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RankingPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" x:Name="TBChampionship" FontSize="20"/>
        <DataGrid x:Name="DGRank" Margin="5" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Rank" Binding="{Binding Rank}"/>
                <DataGridTextColumn Header="Points" Binding="{Binding Points}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="School" Binding="{Binding School}"/>
                <DataGridTextColumn Header="Company" Binding="{Binding Company}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
