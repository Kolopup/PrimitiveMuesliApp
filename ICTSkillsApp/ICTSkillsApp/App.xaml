<Application x:Class="ICTSkillsApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ICTSkillsApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style x:Key="AllWindow" TargetType="Window">
            <Setter Property="Background" Value="#003165"/>
        </Style>
        <Style x:Key="ExtraWindow" TargetType="Window">
            <Setter Property="Background" Value="#00a9cb"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="Green"/>
        </Style>
    </Application.Resources>
</Application>
