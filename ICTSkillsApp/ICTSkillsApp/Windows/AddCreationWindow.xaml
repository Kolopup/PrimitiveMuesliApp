<Window x:Class="ICTSkillsApp.Windows.AddCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ICTSkillsApp.Windows"
        mc:Ignorable="d"
        Title="AddCreationWindow" Height="384.836" Width="298.361" WindowStartupLocation="CenterScreen" Style="{StaticResource ExtraWindow}">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <TextBlock Text="Add Criterion" Margin="5"/>
            <TextBlock Text="Criterian" Margin="5"/>
            <TextBox x:Name="TBCreaterian" Margin="5"/>
            <TextBlock Text="Points" Margin="5"/>
            <TextBox x:Name="TBPoints" Margin="5"/>
            <TextBlock Text="Competition" Margin="5"/>
            <ComboBox x:Name="CBCompetitions" DisplayMemberPath="Name" SelectedIndex="0" Margin="5"/>
            <Button x:Name="BSubmit" Content="Submit" Margin="5" Click="BSubmit_Click"/>
        </StackPanel>
    </Grid>
</Window>
